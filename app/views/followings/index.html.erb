<!-- Blogs Followed -->
<% num_followed = @followed_users.length%>
<ul class="follow clearfix">
  <% if num_followed == 1%>
    <h1>Following <%= num_followed %> person</h1>
  <% else %>
    <h1>Following <%= num_followed %> people</h1>
  <% end %>
  <ul class="follow-ul">
  <% @followed_users.each do |user| %>
    <li class="clearfix follow-li"><div style="float:left;"><%= image_tag user.avatar.url(:small), :height => '40', :width => '40', :class => "thumbnail" %> <%=link_to user.username, user_url(user) %> </div><%= button_to "Unfollow", user_follow_url(current_user.id, user.id), method: :delete, class: "unfollow-button" %></li>
  <% end %>
  </ul>
</ul>