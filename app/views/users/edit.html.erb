

<form action="<%= user_url(current_user.id) %>" method="POST" enctype="multipart/form-data" class="follow">
  <h1>Edit you profile </h1>
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label>Username
    <input type="text" name="user[username]"  value="<%= current_user.username %>" style="width: 200px; padding: 3px; font-size:16px;">
  </label>
  <br>
  <br>

  <div class="field">Avatar<input type="file" name="user[avatar]"></div>
  <br>
  Current avatar:
  <br>
  <%= image_tag current_user.avatar.url(:small), :class => "edit-avatar" %>

  <br>
  <br>
  <input type="submit" value="Save Edits" class="post-buttons-save-user-edits">
</form>